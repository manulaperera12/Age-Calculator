<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/col_2"
    tools:context=".MainActivity">





    <TextView
        android:id="@+id/showDayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/col_3"
        android:gravity="center_horizontal"
        android:textFontWeight="400"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="dd/mm/yyyy"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Date"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/inSecondsTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@color/col_3"
        android:gravity="center_horizontal"
        android:textFontWeight="400"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="0000"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_seconds"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/inMinutesTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/col_3"
        android:gravity="center_horizontal"
        android:textFontWeight="400"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="0000"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_minutes"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/inHoursTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/col_3"
        android:gravity="center_horizontal"
        android:textFontWeight="400"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="0000"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_hours"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/inDaysTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/col_3"
        android:gravity="center_horizontal"
        android:textFontWeight="400"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="0000"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_days"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/inYrsTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/col_3"
        android:gravity="center_horizontal"
        android:textFontWeight="400"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="0000"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/in_days"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnBirthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/btn_color"
        android:text="@string/select_birthday"
        android:textColor="#FFFFFF" />



